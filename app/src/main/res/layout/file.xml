<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_file"
            style="@style/LayoutFile">

            <ImageView
                android:id="@+id/image_file_icon"
                style="@style/FileIcon"
                app:srcCompat="@drawable/ic_file_24dp" />

            <LinearLayout
                android:id="@+id/layout_file_text"
                style="@style/LayoutFileInner">

                <TextView
                    android:id="@+id/text_file_name"
                    style="@style/TextFileName"
                    android:text="@string/file" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_file_date"
                        style="@style/TextFileSubtext"
                        android:layout_weight="1"
                        android:text="@string/date" />

                    <TextView
                        android:id="@+id/text_file_size"
                        style="@style/TextFileSubtext"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/size" />
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/button_file_encrypt"
                style="@style/FileEncryptButton"
                app:srcCompat="@drawable/ic_encrypt_24dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDivider" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>