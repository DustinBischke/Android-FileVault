<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LayoutScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DrawerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutFileList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutFile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LayoutFileInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="LayoutFileInfoSubtext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="Image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageViewLarge" parent="Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FileIcon" parent="Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="FileEncryptButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextLargeWhite" parent="Text">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextSmallLight" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="TextFileName" parent="Text">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="TextFileSubtext" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSubText</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextFileSubtextRight" parent="TextFileSubtext">
        <item name="android:gravity">right</item>
    </style>

    <style name="LayoutFullColor" parent="LayoutScreen">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LayoutKeypad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutKeypadRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonKeypad">
        <item name="android:layout_height">72dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ImageButtonBackspace" parent="ButtonKeypad">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="SpaceKeypad">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ImageLock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextPinInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
